%html{:xmlns => "http://www.w3.org/1999/html"}
  %head
    %title Hackweek 
    %meta{:charset=> "utf-8"}
    %meta{:name => "viewport", :content =>"width=device-width, initial-scale=1.0"}
    = favicon_link_tag 'favicon.gif'
    = stylesheet_link_tag "application", :media => "all"
    %meta{:property => "og:title", :content => "SUSE Hack Week 9"}
    %meta{:property => "og:image", :content => "http://hackweek.suse.com/images/suse-hackweek-9.png"}
    %meta{:property => "og:site_name", :content => "SUSE Hack Week 9"}
    %meta{:property => "og:description", :content => "Hack Week is the week where SUSE engineers can experiment without limits. This is the opportunity to innovate, collaborate across teams, and learn."}
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render :partial => "layouts/header"
    .container.content
      - if flash
        = render partial: "layouts/alert", flash: flash
      = yield
      = image_tag "coffee.png", :id=>"coffee", :class=>"coffee"
    = image_tag "pencil.png", :id=>"pencil", :class=>"pencil"
    :javascript
      if(window.location.href.indexOf("hackweek.suse.com") > 0) {
        var _paq = _paq || [];
        (function(){ var u=(("https:" == document.location.protocol) ? "https://beans.opensuse.org/piwik//" : "http://beans.opensuse.org/piwik//");
        _paq.push(['setSiteId', 23]);
        _paq.push(['setTrackerUrl', u+'piwik.php']);
        _paq.push(['trackPageView']);
        _paq.push(['enableLinkTracking']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0]; g.type='text/javascript'; g.defer=true; g.async=true; g.src=u+'piwik.js';
        s.parentNode.insertBefore(g,s); })();
      }
