%h3 Your Notifications
%hr
%br

.older-notifications
  - @older_notifications.each do |notification|
    = link_to project_path(notification.notifiable) do
      %p
        - if notification.notifiable.avatar.attached?
          = image_tag(url_for(notification.notifiable.avatar), width: 40)
        #{notification.actor.name} #{notification.action}
        %span.pull-right (#{ time_ago_in_words(notification.created_at) } ago)
        %hr
  .notification_pagination
    = paginate @older_notifications
