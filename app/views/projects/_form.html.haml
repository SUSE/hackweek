= form_for(@project) do |f|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(@project.errors.count, "error")
        prohibited this project from being saved:

      %ul
      - @project.errors.full_messages.each do |msg|
        %li
          = msg
  .field
    = f.label :title
    <br />
    = f.text_field :title
    
  .field
    = f.label :description
    <br />
    = f.text_area :description
    
  .actions
    = f.submit
