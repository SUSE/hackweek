.col-sm-12
  .row
    .col-sm-12
      .page-header
        %h1
          = @project.title
          %br
          %small
            an idea of
            = @project.originator.name
  .row
    .col-sm-8
      :markdown
        #{@project.description}
    .col-sm-4
      .row
        .col-sm-12
          .text-center
            = render :partial => "projects/buttons", :locals => {:project =>  @project }
        .col-sm-12
          %h4 Hackers
          - @project.users.each do |user|
            = link_to(user_path(user.id)) do
              = image_tag user.gravatar_url(:size => "64"), alt: user.name, title: user.name, class: "img-thumbnail"
        .col-sm-12
          %h4 Looking for mad skills in:
          - if @project.keywords.empty?
            %p Nothing at the moment
          - else 
            %p
              - @project.keywords.each do |word|
                %span.badge
                  = word.name
          -if  @project.originator == current_user or @project.users.include? current_user
            %p
              = render :partial => "keywords/new", :locals => {:what => @project }
        .col-sm-12
          %h4
            Activity
            %span.pull-right
              = render :partial => "updates/show_all_modal", :locals => { :updates => @project.updates }
          %ul
          - @project.updates.reverse.first(5).each do |update|
            %li
              = render :partial => "updates/show", :locals => { :update => update }
  .row
    .col-sm-12
      %h4
        Comments
        = "(#{@project.comments.length})"
      %ul.comments
        = render :partial => 'comments/comment', :collection => @project.comments
      %p
        - if current_user
          = form_for [ @project, @new_comment ] do |f|
            %p
            = f.text_area :text, :cols => 80, :rows => 10, :witdh => "100%"
            %p
            = f.submit 'Add comment'
        - else
          = link_to 'Add a comment', new_project_comment_path( @project )


